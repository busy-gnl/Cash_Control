{% extends 'base_dashboard.html.twig' %}

{% block title %}Placements et investissements
{% endblock %}

{% block body %}
	<section class="container mx-5">
		<h1>Placements et investissements</h1>

		<table class="table align-middle">
			<thead>
				<tr>
					<th>Libellé</th>
					<th>Montant</th>
					<th>Type</th>
					<th>Rentabilité</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% if app.user %}
					{% for saving in app.user.savings %}
						<tr>
							<td>{{ saving.name|capitalize }}</td>
							<td>{{ saving.amount }}
								€</td>
							<td>{{ saving.type }}</td>
							<td>{{ saving.profitability }}</td>
							<td>
								<a class="btn" href="{{ path('app_savings_edit', {'id': saving.id}) }}">
									<i class="bi bi-pencil-square"></i>
								</a>
								{% include "savings/_delete_form.html.twig" %}
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="6">Aucune donnée trouvée</td>
						</tr>
					{% endfor %}
				{% endif %}
			</tbody>
		</table>

		<a class="btn btn-primary" href="{{ path('app_savings_new') }}">Ajouter un nouveau placement</a>
	</section>
{% endblock %}
