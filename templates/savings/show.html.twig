{% extends 'base_dashboard.html.twig' %}

{% block title %}Savings
{% endblock %}

{% block body %}
	<section class="container mx-5">
		<h1>Savings</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ saving.id }}</td>
				</tr>
				<tr>
					<th>Name</th>
					<td>{{ saving.name }}</td>
				</tr>
				<tr>
					<th>Amount</th>
					<td>{{ saving.amount }}</td>
				</tr>
				<tr>
					<th>Type</th>
					<td>{{ saving.type }}</td>
				</tr>
				<tr>
					<th>Profitability</th>
					<td>{{ saving.profitability }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('app_savings_index') }}">back to list</a>

		<a href="{{ path('app_savings_edit', {'id': saving.id}) }}">edit</a>

		{{ include('savings/_delete_form.html.twig') }}
	</section>
{% endblock %}
